{
  "name": "cw-dashboard",
  "version": "1.0.25",
  "description": "CW Dashboard - ConnectWise Project and Opportunity Tracker",
  "main": "dist-electron/main.js",
  "author": "Gaskony",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "npm run build:electron && concurrently -k \"tsc -p electron/tsconfig.json -w\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "cd frontend && npm test"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.5",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.gaskony.cw-dashboard",
    "productName": "CW Dashboard",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "frontend/dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "CW-Dashboard-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "nigelgwork",
      "repo": "cw-dashboard-dist"
    }
  }
}
